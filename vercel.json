{
  "version": 2,
  "name": "creditsentinel",
  "builds": [
    {
      "src": "backend/main_prod.py",
      "use": "@vercel/python"
    },
    {
      "src": "frontend/build/web/**",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/backend/main_prod.py"
    },
    {
      "src": "/(.*)",
      "dest": "/frontend/build/web/$1"
    }
  ],
  "env": {
    "DATABASE_URL": "@database_url",
    "SECRET_KEY": "@secret_key",
    "GEMINI_API_KEY": "@gemini_api_key"
  },
  "functions": {
    "backend/main_prod.py": {
      "maxDuration": 30
    }
  }
}
