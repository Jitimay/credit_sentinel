{
  "version": 2,
  "builds": [
    {
      "src": "api/index.py",
      "use": "@vercel/python"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/api/index.py"
    },
    {
      "src": "/(.*)",
      "dest": "/web_dist/$1"
    }
  ],
  "env": {
    "DATABASE_URL": "sqlite:///./creditsentinel.db",
    "SECRET_KEY": "your-secret-key-change-in-production"
  }
}
